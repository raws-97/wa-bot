<!doctype html>
<html lang="en-US">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="shortcut icon" type="image/jpg" href="images/whatsapp.png"/>


    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">

    <!-- Custom Css -->
    <link rel="stylesheet" href="style.css" type="text/css" />

    <!-- Ionic icons -->
    <link href="https://unpkg.com/ionicons@4.2.0/dist/css/ionicons.min.css" rel="stylesheet">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700,900" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.js" integrity="sha512-n/4gHW3atM3QqRcbCn6ewmpxcLAHGaDjpEBu4xZd47N0W2oQ+6q7oc3PXstrJYXcbNU1OHdQ1T7pAP+gi5Yu8g==" crossorigin="anonymous"></script>


    <title>Whatsapp Bot</title>
  </head>

  <body>
  
  <!-- H E R O -->
  <section id="hero">
    <div class="container">
      <div class="row">
        <div class="col-lg-5 col-md-5 col-sm-5 col-xs-5">
          <center>
            <img src="images/iphone.png" class="img-fluid" alt="QR Code" id="qrcode">
          </center>
        </div>
        <div class="col-md-7 content-box hero-content">
          <span>Status</span>
          <h1 class="logs"><%= state %></h1> <hr>
          <% if (state == 'CONNECTED') {%>
          <table id="details">
            <tr>
              <td><p>Phone</p></td>
              <td>:</td>
              <td><p class="phone"><%= deviceInfo.phone.device_manufacturer %></p></td>
            </tr>
            <tr>
              <td><p>Builds</p></td>
              <td>:</td>
              <td><p class="phoneDetails"><%= deviceInfo.phone.device_model %></p></td>
            </tr>
            <tr>
              <td><p>Battery</p></td>
              <td>:</td>
              <td><p class="phoneBattery"><%= deviceInfo.battery%> %</p></td>
            </tr>
          </table>
          <form action="/whatsapp/logout" method="post">
            <input type="submit" class="btn btn-regular" value="Logout">
          </form>
          <script>
            $('#qrcode').attr('src', 'images/success.png')
          </script>
          <% } else { %>
            <img src="/images/qrCode.png" alt="QR WA" onerror="this.style.display = 'none'">
            <form action="/whatsapp/restart-service" method="post">
              <input type="submit" class="btn btn-regular" value="Restart Service">
            </form>
            
        </div>
      </div>
    </div>
  </section>
  <!-- E N D  H E R O -->
    

    <!-- External JavaScripts -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous"></script>
    <script>
      setInterval(() => {
        window.location.reload()
      }, 3000)

    </script>
    <% } %>
  </body>
</html>